{
  "name": "predatorlinux",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para controlar hardware Predator en Linux",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc && vite build && electron-builder",
    "build:linux": "npm run build -- --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarioAJ11/PredatorLinux.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MarioAJ11/PredatorLinux/issues"
  },
  "homepage": "https://github.com/MarioAJ11/PredatorLinux#readme",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "electron": "^39.0.0",
    "typescript": "^5.9.3",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/sudo-prompt": "^9.1.5",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  },
  "build": {
    "appId": "com.predatorlinux.app",
    "productName": "PredatorLinux",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "System"
    }
  }
}
